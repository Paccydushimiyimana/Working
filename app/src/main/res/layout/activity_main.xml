<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#ffbb4a"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#f2e3c1"
        android:padding="5dp"
        android:text="Login panel"
        android:textColor="#232e35"
        android:textSize="30sp"
        android:textStyle="normal|italic"
        android:id="@+id/tvtitle" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginTop="10dp"
        android:id="@+id/imageView3"
        android:layout_width="207dp"
        android:layout_height="127dp"
        android:layout_below="@id/tvtitle"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_logo" />


    <EditText
        android:id="@+id/editText1"
        android:layout_width="246dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="299dp"
        android:layout_below="@id/imageView3"
        android:layout_marginTop="50dp"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="246dp"
        android:layout_height="42dp"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginLeft="150dp"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="360dp"
        android:layout_below="@id/editText1"/>


    <TextView
        android:id="@+id/textView"
        android:layout_width="117dp"
        android:layout_height="43dp"
        android:layout_marginTop="-70dp"
        android:text="Email:"
        android:textAllCaps="false"
        android:textColor="#232e35"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="310dp"
        android:layout_below="@id/editText2"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:text="Password:"
        android:textColor="#232e35"
        android:textSize="24sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="11dp"
        tools:layout_editor_absoluteY="370dp"
        android:layout_below="@id/textView"/>

    <Button
        android:id="@+id/bLOGIN"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#232e35"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textColor="@android:color/background_light"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="459dp"
        android:layout_below="@id/textView2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="use: muhoza@gmail.com(email)and pass(password)"
        android:textColor="#3b3e47"
        android:textAlignment="center"
        android:layout_below="@id/bLOGIN" />

</RelativeLayout>